       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
	<definition name="myapp.homepage" template="/jsp/layouts/template.jsp">
	  <put-attribute name="title" value="Felix Simón S.L." />
	  <put-attribute name="body" value="/jsp/index.jsp" />
	  <put-attribute name="footer" value="/jsp/layouts/footer.jsp"/>
	  <put-attribute name="menu" value="templateMenuInicio" type="definition"></put-attribute>
	</definition>
	
	<definition name="myapp.empresa" extends="myapp.homepage">
		<put-attribute name="body" value="/jsp/empresa.jsp"></put-attribute>
		<put-attribute name="menu" value="templateMenuEmpresa" type="definition"></put-attribute>
	</definition>
	
	<definition name="myapp.calidad" extends="myapp.homepage">
		<put-attribute name="body" value="/jsp/calidad.jsp"></put-attribute>
		<put-attribute name="menu" value="templateMenuCalidad" type="definition"></put-attribute>
	</definition>
	
	<definition name="myapp.productos" extends="myapp.homepage">
		<put-attribute name="body" value="/jsp/productos.jsp"></put-attribute>
		<put-attribute name="menu" value="templateMenuProductos" type="definition"></put-attribute>
	</definition>
	
	<definition name="myapp.imagenes" extends="myapp.homepage">
		<put-attribute name="body" value="/jsp/imagenes.jsp"></put-attribute>
		<put-attribute name="menu" value="templateMenuImagenes" type="definition"></put-attribute>
	</definition>
	
	<definition name="myapp.contacto" extends="myapp.homepage">
		<put-attribute name="body" value="/jsp/contacto.jsp"></put-attribute>
		<put-attribute name="menu" value="templateMenuContacto" type="definition"></put-attribute>
	</definition>
	
	<!-- Definicions per mostrar els menus com toca en cada cas -->
	
	<definition name="templateMenuInicio" template="/jsp/layouts/menu.jsp" >
		<put-attribute name="index" value="0"></put-attribute>
	</definition>
	
	<definition name="templateMenuEmpresa" template="/jsp/layouts/menu.jsp" >
		<put-attribute name="index" value="1"></put-attribute>
	</definition>
	
	<definition name="templateMenuCalidad" template="/jsp/layouts/menu.jsp" >
		<put-attribute name="index" value="2"></put-attribute>
	</definition>
	
	<definition name="templateMenuProductos" template="/jsp/layouts/menu.jsp" >
		<put-attribute name="index" value="3"></put-attribute>
	</definition>
	
	<definition name="templateMenuImagenes" template="/jsp/layouts/menu.jsp" >
		<put-attribute name="index" value="4"></put-attribute>
	</definition>
	
	<definition name="templateMenuContacto" template="/jsp/layouts/menu.jsp" >
		<put-attribute name="index" value="5"></put-attribute>
	</definition>
	
</tiles-definitions>
